@model IEnumerable<Egresados.Models.PublicacionAdmin>

@{
    ViewBag.Title = "Index";
}

<h2>Publicaciones</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFinalizacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asunto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Informacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoPublicacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaFinalizacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Asunto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Informacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoPublicacion)
        </td>
        <td>
            <a class="btn btn-warning" href="/Administradors/Edit/@item.PublicacionAdminID">Editar<samp class="glyphicon glyphicon-edit"> </samp></a>

        <td> <a class="btn btn-info" href="/Administradors/Details/@item.PublicacionAdminID">Detalles<samp class="glyphicon glyphicon-exclamation-sign"> </samp></a></td>

        <td> <a class="btn btn-danger" href="/Administradors/Details/@item.PublicacionAdminID">Eliminar<samp class="glyphicon glyphicon-trash"> </samp></a></td>

        </td>
    </tr>
}

</table>
